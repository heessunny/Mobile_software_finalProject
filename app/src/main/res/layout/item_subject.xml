<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_rv_car_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_rv_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/main_rv_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="과목 이름"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/main_rv_car_img"
        app:layout_constraintStart_toEndOf="@id/main_rv_car_img"/>
    <TextView
        android:id="@+id/main_rv_professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="교수명"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/main_rv_subname"
        app:layout_constraintStart_toStartOf="@id/main_rv_subname"/>


</androidx.constraintlayout.widget.ConstraintLayout>